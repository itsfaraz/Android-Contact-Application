<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Authentication" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryVariant">#0B6DBB</item>
        <item name="colorOnPrimary">@color/app_color_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/app_color_secondary</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#00D309</item>
        <item name="strokeColor">#00D309</item>
    </style>

    <style name="ShapeAppearanceOverlay.DifferentCornerSize.CornerSize50Percent">
        <item name="cornerSize">50%</item>
    </style>
</resources>